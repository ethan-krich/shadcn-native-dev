{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "target": "esnext",
    "types": ["jest", "nativewind", "react-native", "react-native-web"],
    "jsxImportSource": "nativewind",
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": [
    "nativewind-env.d.ts",
    "storybook/**/*.ts",
    "storybook/**/*.tsx",
    "registry/**/*.tsx",
    "components/**/*.ts",
    "components/**/*.tsx",
    "lib/**/*.ts",
    "lib/**/*.tsx"
  ],
  "exclude": ["node_modules"]
}
